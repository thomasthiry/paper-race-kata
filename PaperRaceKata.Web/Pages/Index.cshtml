@page
<div class="container">
    <div class="row">
        <div class="col-2">Car</div>
        <div class="col-4"><input type="text" id="carIdInput" value="red car" /></div>
    </div>
    <div class="row">
        <div class="col-2">Direction</div>
        <div class="col-4">
            @foreach (var adjustment in Enum.GetValues(typeof(Adjustment)))
            {
                <input type ="button" id="@adjustment" value="@adjustment" onclick="adjustDirection('@adjustment')"/>
            }
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="resetButton" value="Reset" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="adjustments"></ul>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/paperRace.js"></script>  
}
