@page
<div class="container">
    <div class="row">
        <div class="col-2">Car</div>
        <div class="col-4"><input type="text" id="carIdInput" /></div>
    </div>
    <div class="row">
        <div class="col-2">Direction</div>
        <div class="col-4">
            <select id="directionInput">
                @foreach (var adjustment in Enum.GetValues(typeof(Adjustment)))
                {
                <option value="@adjustment">@adjustment</option>
                }
            </select>
        </div>
    </div>
    <div class="row">&nbsp;</div>
    <div class="row">
        <div class="col-6">
            <input type="button" id="sendButton" value="Adjust" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-6">
        <ul id="adjustments"></ul>
    </div>
</div>
<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/paperRace.js"></script>